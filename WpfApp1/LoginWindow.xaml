<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20" Margin="0,10,0,30"/>

        <Label Content="Логин:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,70,0,0"/>
        <TextBox Name="LoginTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Margin="100,70,0,0"/>

        <Label Content="Пароль:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,120,0,0"/>
        <PasswordBox Name="PasswordBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Margin="100,120,0,0"/>

        <Button Content="Войти" Name="LoginButton" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Click="LoginButton_Click"/>
        <Button Content="Отмена" Name="CancelButton" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" Click="CancelButton_Click"/>
    </Grid>
</Window>